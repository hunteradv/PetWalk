<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.labinfo.pet_walk.Passeador.TelaCadastroPasseador">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_nome"
            android:layout_gravity="center_horizontal"
            android:hint="NOME*"
            android:background="@drawable/edittextshape"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_senha"
            android:layout_gravity="center_horizontal"
            android:hint="SENHA*"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingStart="10dp"
            android:password="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_email"
            android:layout_gravity="center_horizontal"
            android:hint="E-MAIL*"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingStart="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt_idade"
            android:background="@drawable/edittextshape"
            android:hint="IDADE"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:numeric="integer"
            android:paddingStart="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_rg"
            android:layout_gravity="center_horizontal"
            android:hint="RG"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingStart="10dp"
            android:numeric="integer" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_cpf"
            android:layout_gravity="center_horizontal"
            android:hint="CPF*"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingStart="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_telefone"
            android:layout_gravity="center_horizontal"
            android:hint="TELEFONE*"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingStart="10dp"
            android:numeric="integer" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/edt_endereco"
            android:layout_gravity="center_horizontal"
            android:hint="ENDEREÃ‡O*"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingStart="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CADASTRAR"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:onClick="cadastrar_clique"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="35dp" />
    </LinearLayout>
</RelativeLayout>
