<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.labinfo.pet_walk.Passeador.PrincipalDadosP">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        tools:context="com.example.labinfo.pet_walk.TelaAlterarPasseador"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="425dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_nome"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_senha"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_email"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_idade"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_rg"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_cpf"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_telefone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edt_endereco"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittextshape"
                android:layout_marginBottom="0dp"
                android:paddingStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="425dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|left"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/linearLayout" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOME"
                android:id="@+id/tv_nome"
                android:textSize="13dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SENHA"
                android:id="@+id/tv_senha"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                android:id="@+id/tv_email"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA NASC"
                android:id="@+id/tv_idade"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RG"
                android:id="@+id/tv_rg"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF"
                android:id="@+id/tv_cpf"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TELEFONE"
                android:id="@+id/tv_telefone"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENDEREÃ‡O"
                android:id="@+id/tv_endereco"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true" >

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="EXCLUIR"
                android:id="@+id/btn_excluir"
                android:layout_marginLeft="0dp"
                android:onClick="excluir_clique"
                android:background="@drawable/buttonshape"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="SALVAR"
                android:id="@+id/btn_salvar"
                android:layout_marginLeft="0dp"
                android:onClick="alterar_clique"
                android:background="@drawable/buttonshape"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
